<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nikita.teethhelper">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".UI.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".UI.TablesActivity" />
        <activity
            android:name=".UI.ListActivity"
            android:theme="@style/AppTheme.TableTheme" />
        <activity
            android:name=".UI.RecordActivities.PatientDataActivity"
            android:label="@string/patientField"
            android:theme="@style/PurpleTheme" />
        <activity
            android:name=".UI.RecordActivities.DoctorDataActivity"
            android:label="@string/doctorField"
            android:theme="@style/RedTheme" />
        <activity
            android:name=".UI.RecordActivities.RenderDataActivity"
            android:label="@string/renderField"
            android:theme="@style/AquaTheme" />
        <activity
            android:name=".UI.RecordActivities.ServiceDataActivity"
            android:label="@string/serviceField"
            android:theme="@style/OrangeTheme" />
        <activity
            android:name=".UI.RecordActivities.VisitsDataActivity"
            android:label="@string/visitField"
            android:theme="@style/GreenTheme" />
        <activity
            android:name=".UI.RequestActivity"
            android:label="@string/requestField"
            android:theme="@style/BlueTheme" />
        <activity android:name=".ReportActivity" />
        <activity android:name=".UI.DateActivity"
            android:label="@string/dateField"
            android:theme="@style/GreenTheme" />
    </application>

</manifest>